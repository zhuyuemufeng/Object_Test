<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.itheima.dao.system.DeptMapper">
    <resultMap id="map1" type="dept">
        <id column="dept_id" property="id"/>
        <result column="dept_name" property="deptName"/>
        <result column="state" property="state"/>
        <result column="company_id" property="companyId"/>
        <result column="company_name" property="companyName"/>
        <association property="parent" column="parent_id" select="com.itheima.dao.system.DeptMapper.findById"/>
    </resultMap>

    <select id="findAll" resultMap="map1" parameterType="string">
        SELECT * from pe_dept WHERE company_id = #{companyId}
    </select>

    <select id="findById" parameterType="string" resultMap="map1">
        SELECT * FROM pe_dept WHERE dept_id = #{id}
    </select>

    <update id="update" parameterType="dept">
        UPDATE pe_dept
        SET
        dept_name = #{deptName},
        parent_id = #{parent.id},
        state = #{state},
        company_id = #{companyId},
        company_name = #{companyName}
        WHERE dept_id = #{id}
    </update>

    <insert id="save" parameterType="dept">
        INSERT INTO pe_dept
        VALUES (
        #{id},
        #{deptName},
        #{parent.id},
        #{state},
        #{companyId},
        #{companyName}
        )
    </insert>

    <delete id="delete" parameterType="string">
        DELETE FROM pe_dept WHERE dept_id = #{id}
    </delete>
</mapper>